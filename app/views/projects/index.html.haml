%legend Current Projects

%table{class: "table table-hover"}
  %thead
    %tr
      %th Name
      %th Description
      %th State
    - @projects.each do |project|
      %tr
        %td= project.name
        %td= project.description
        %td
          %span{class: "label label-#{project.set_status_label}"}
            = project.state.capitalize
        %td= link_to 'Show', project, class: 'btn btn-success btn-small', type:'button'
        %td= link_to 'Edit', edit_project_path(project), class: 'btn btn-warning btn-small', type:'button'
        %td= link_to 'Delete', project, class: 'btn btn-danger btn-small', type:'button', method: :delete, data: { confirm: 'Are you sure?' }
%br
= link_to 'New Project', new_project_path, class: 'btn btn-primary', type:'button'
